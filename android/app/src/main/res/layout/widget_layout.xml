<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#121212"
    android:padding="16dp"> <!-- Reduced padding -->

    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey there! How can I"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/subheader_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="help you today?"
        android:textColor="#3498DB"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="24dp" />

    <ImageButton
        android:id="@+id/microphone_button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_btn_speak_now"  <!--  Replace with your microphone icon -->
        android:scaleType="fitCenter"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/gallery_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_gallery"  <!-- Replace with your gallery icon -->
            android:scaleType="fitCenter"
            android:layout_marginEnd="16dp" />

        <ImageButton
            android:id="@+id/camera_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_camera"  <!-- Replace with your camera icon -->
            android:scaleType="fitCenter" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello! I'm your AI assistant. How can I help you today?"
        android:textColor="#FFFFFF"        android:textSize="14sp"
        android:textAlignment="center"        android:layout_marginTop="24dp" />
</LinearLayout>